{
    "name": "Slash Diablo Tools",
    "version": "0.3",
    "description": "Adds a save button the slashdiablo's armory. Maybe someday more to come...",
    "manifest_version": 2,
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "img/16.png"
    },
    "content_scripts": [
        {
            "matches": [
            "https://armory.slashdiablo.net/character/*",
            "https://armory.slashgaming.net/character/*"
            ],
            "js": [
            "start.js"
            ],
            "permissions": [
            "storage"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
      "css/styles.css",
      "lib/jquery-3.3.1.min.js",
      "lib/constants.bundle.min.js",
      "lib/d2s.bundle.min.js",
      "index.js"
    ]
}